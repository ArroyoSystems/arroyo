{
    "type": "object",
    "title": "RedisConfig",
    "properties": {
        "connection": {
            "oneOf": [
                {
                    "type": "object",
                    "title": "Standard",
                    "properties": {
                        "address": {
                            "type": "string",
                            "title": "address",
                            "description": "The address of your Redis server",
                            "examples": ["redis://localhost:6379"],
                            "pattern": "^redis://.*$"
                        }
                    },
                    "additionalProperties": false,
                    "required": [
                        "address"
                    ]
                },
                {
                    "type": "object",
                    "title": "Clustered",
                    "required": [
                        "addresses"
                    ],
                    "properties": {
                        "addresses": {
                            "type": "array",
                            "title": "Addresses",
                            "description": "The addresses of your Redis cluster",
                            "items": {
                                "type": "string",
                                "title": "Address",
                                "examples": ["redis://localhost:6379"],
                                "pattern": "^redis://.*$"
                            }
                        }
                    },
                    "additionalProperties": false
                }
            ]
        },

        "username": {
            "title": "Username",
            "type": "string",
            "description": "The username for your redis cluster (if using auth)",
            "format": "var-str"
        },
        "password": {
            "title": "Password",
            "type": "string",
            "description": "The password for your redis cluster (if using auth)",
            "format": "var-str"
        }
    },
    "sensitive": [
        "password"
    ],
    "required": [
        "connection"
    ]
}

