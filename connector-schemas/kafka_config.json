{
    "type": "object",
    "title": "KafkaConfig",
    "properties": {
        "bootstrapServers": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "description": "Kafka brokers to connect to"
        },
        "authentication": {
            "oneOf": [
                {
                    "type": "object",
                    "title": "None",
                    "properties": {}
                },
                {
                    "type": "object",
                    "title": "SASL",
                    "required": [
                        "protocol",
                        "mechanism",
                        "username",
                        "password"
                    ],
                    "properties": {
                        "protocol": {
                            "type": "string",
                            "description": "The SASL protocol to use (e.g., SASL_PLAINTEXT, SASL_SSL, etc."
                        },
                        "mechanism": {
                            "type": "string",
                            "description": "The SASL mechanism to use (e.g., SCRAM-SHA-256, SCRAM-SHA-512, etc.)"
                        },
                        "username": {
                            "type": "string",
                            "description": "The username to use for SASL authentication"
                        },
                        "password": {
                            "type": "string",
                            "description": "The password to use for SASL authentication"
                        }
                    }
                }
            ]
        }
    },
    "required": [
        "bootstrapServers",
        "authentication"
    ]
}

