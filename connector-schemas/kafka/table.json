{
    "type": "object",
    "title": "KafkaTable",
    "properties": {
        "topic": {
            "title": "Topic",
            "type": "string",
            "description": "The Kafka topic to use for this table"
        },
        "type": {
            "type": "object",
            "title": "Table Type",
            "oneOf": [
                {
                    "type": "object",
                    "title": "Source",
                    "properties": {
                        "offset": {
                            "type": "string",
                            "description": "The offset to start reading from",
                            "enum": [
                                "earliest",
                                "latest"
                            ]
                        },
                        "read_mode": {
                            "type": "string",
                            "description": "Type of reading behavior for Kafka Source",
                            "enum": [
                                "read_committed",
                                "read_uncommitted"
                            ]
                        }
                    },
                    "required": [
                        "offset",
                        "read_mode"
                    ],
                    "additionalProperties": false
                },
                {
                    "type": "object",
                    "title": "Sink",
                    "properties": {
                        "commit_mode": {
                            "type": "string",
                            "description": "Type of committing behavior for Kafka Sink",
                            "enum": [
                                "at_least_once",
                                "exactly_once"
                            ]
                        }
                    },
                    "required": [
                        "commit_mode"
                    ],
                    "additionalProperties": false
                }
            ]
        }
    },
    "required": [
        "topic",
        "type"
    ]
}
